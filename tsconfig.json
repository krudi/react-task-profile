{
    "extends": "@krudi/typescript-config/nextjs.json",
    "compilerOptions": {
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "src/app/**/*.ts",
        "src/app/**/*.tsx",
        "src/components/**/*.tsx",
        "client.d.ts",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
