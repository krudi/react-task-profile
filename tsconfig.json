{
    "extends": "@krudi/typescript-config/nextjs.json",
    "compilerOptions": {
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@lib/*": ["./src/lib/*"],
            "@utils/*": ["./src/utils/*"],
            "@drizzle/*": ["./src/drizzle/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "src",
        "client.d.ts",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
