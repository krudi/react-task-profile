{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "react-task-profile",
    "description": "Web app for creating user profiles and managing tasks with titles, descriptions, and due dates using a PostgreSQL database.",
    "license": "MIT",
    "author": {
        "name": "krudi",
        "email": "patryk.kudlik@gmail.com",
        "url": "https://github.com/krudi"
    },
    "private": false,
    "homepage": "https://github.com/krudi/react-task-profile#readme",
    "bugs": {
        "url": "https://github.com/krudi/react-task-profile/issues"
    },
    "keywords": [
        "template"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/krudi/react-task-profile.git"
    },
    "engines": {
        "node": ">= 22.18.0",
        "npm": ">= 11.6.2"
    },
    "packageManager": "npm@11.6.2",
    "type": "module",
    "scripts": {
        "dev": "next dev",
        "dev:turbo": "next dev --turbo",
        "build": "next build",
        "start": "next start",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint:eslint": "eslint . --cache --cache-location .cache/.eslintcache",
        "lint:eslint:fix": "eslint . --fix --cache --cache-location .cache/.eslintcache",
        "lint:stylelint": "stylelint --c ./stylelint.config.mjs **/*.css",
        "lint:stylelint:fix": "stylelint -c ./stylelint.config.mjs --fix **/*.css",
        "auth:generate": "pnpx @better-auth/cli generate --config ./src/lib/auth/auth.ts --output ./src/drizzle/schema/new-auth-schema.ts --yes",
        "auth:secret": "pnpx @better-auth/cli secret",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:push": "drizzle-kit push",
        "db:seed": "tsx ./src/drizzle/seeds/index.ts"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.2",
        "@neondatabase/serverless": "^1.0.2",
        "better-auth": "^1.3.34",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.44.7",
        "lucide-react": "^0.552.0",
        "next": "^16.0.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-hook-form": "^7.66.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.28.5",
        "@krudi/eslint-config": "^0.1.7",
        "@krudi/prettier-config": "^0.1.6",
        "@krudi/typescript-config": "^0.1.7",
        "@types/node": "^24.9.2",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "autoprefixer": "^10.4.21",
        "drizzle-kit": "^0.31.6",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "postcss-load-config": "^6.0.1",
        "postcss-nested": "^7.0.2",
        "postcss-syntax": "^0.36.2",
        "stylelint": "^16.25.0",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-order": "^7.0.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}
